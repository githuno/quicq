
<div class="row z-depth-1 login-card">
    <p class="bold admin-title">管理者ログイン</p>
    <%= form_with(url: login_path, scope: :session, class: "col s12 m6 offset-m3") do |f| %>
      <%= render 'layouts/flash_messages' %>
      <div class="mb-1">
        <%= f.label :email %>
        <%= f.email_field :email %>
  
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <%= f.submit "ログイン", class: "waves-effect waves-light btn-large full" %>
    <% end %>
</div>